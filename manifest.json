{
  "manifest_version": 2,

  "name": "Getting started example",
  "description": "This extension allows the user to change the background color of the current page.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches":["<all_urls>"],
      //"css": ["./StyleSheets/MyCss.css"],
      "js": ["main.js",
             "content.js",
             "ports.js",
             "clipboard.min.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    "images/*.png",
    "images/*.svg",
    "MathJaxEvent.js",
    "StyleSheets/MyCss.css"
  ],
  
  "permissions": [
    "tabs",
    "activeTab",
    "storage"
  ]
}
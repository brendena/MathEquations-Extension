{
  
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2015",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "lib": ["es2017", "dom"],
    "types": ["node","chrome"],
    "typeRoots": [
      "types",
      "node_modules/@types"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude":[
    "node_modules",
    "bower_components"
  ]
}